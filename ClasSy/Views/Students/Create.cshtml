@model ClasSy.ViewModels.StudentViewModel

@{
    ViewBag.Title = "Create student";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create student</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Professor</h4>
        <hr/>
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        @Html.Partial("UserForms")
        
        <div class="form-group">
            @Html.LabelFor(model => model.SchoolClassId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.SchoolClassId, new SelectList(Model.SchoolClasses, "Id", "Name"), "Select", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SchoolClassId, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}